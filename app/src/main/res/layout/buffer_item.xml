<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"

    android:background="@layout/border">

    <TextView
        android:id="@+id/buffer_item_track"

        android:layout_width="300dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:fontFamily="@font/font_for_buffer_item_song"

        android:paddingTop="10dp"
        android:textColor="@color/for_buffer_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/buffer_item_autor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/buffer_item_track"
        android:fontFamily="@font/font_for_buffer_item_autor"

        android:paddingBottom="10dp"
        android:textColor="@color/for_buffer_light"
        android:textSize="12sp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/buffer_item_track">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/del_button"

            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="center_vertical"

            app:srcCompat="@drawable/delete_outline"
            app:tint="@color/for_buffer_light"
            app:fabCustomSize="40dp"
            app:backgroundTint="@color/font"
            app:borderWidth="0dp"
            android:elevation="0dp"
        />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/send_button"

            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="43dp"

            app:srcCompat="@drawable/share"
            app:tint="@color/for_buffer_light"
            app:fabCustomSize="40dp"
            app:backgroundTint="@color/font"
            app:borderWidth="0dp"
            android:elevation="0dp"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>